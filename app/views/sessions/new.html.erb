<%= stylesheet_link_tag 'login' %>
<div class="login">
	<div class="login_content">
		<h1>Ingrese a su cuenta</h1>
		<div class="container-fluid">
				<%= form_tag sessions_path, :class => "form-horizontal" do %>
				  <div class="form-group">
		    		<%= label_tag :email,  "Email", :class => "col-lg-3 control-label" %>
		    			<div class="col-lg-9">
						<%= text_field_tag :email, params[:email], :placeholder => "nombre@email.com", :class => "form-control" %>
		    			</div>
		  			</div>
		  			<div class="form-group">
		    		<%= label_tag :password,  "Contraseña", :class => "col-lg-3 control-label" %>
		    			<div class="col-lg-9">
						<%= password_field_tag :password, value = nil, class: "form-control" %>
		    			</div>
		  			</div>
		  			<div class="form-group">
						<%= submit_tag 'Ingresar', :class => "btn btn-primary pull-right"%>
					</div> 
					<div class="form-group">
						<%= label_tag :remember_me, :class => "checkbox" do %>
		  					<%= check_box_tag :remember_me, 1, params[:remember_me] %>Recordarme
						<% end %>
					</div>
				<% end %>
				<div class="form-group">
			<%= link_to "Es la primera vez que ingresa u olvido su contraseña?", sign_up_path %><br />
			</div>
		</div>
	</div>
</div>


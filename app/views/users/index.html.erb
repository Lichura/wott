<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading usuarios"><h3>Usuarios</h3></div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6 col-lg-offset-3">
            <%= form_tag(users_path, :method => "get", id: "search-form") do %>
            <div class="input-group">
              <%= text_field_tag :search,  params[:search], placeholder: "Buscar usuarios", class: "form-control"%>
              <span class="input-group-btn">
                <%= submit_tag "Buscar", class: 'btn btn-default'%>
              </span>
            </div>
           <% end %>
          </div>
        </div>
          <div class="row" style="height: 50px;"></div>
           <div class="table-responsive">
             <table class="table table-hover">
               <thead class="usuarios">
                <tr>
                  <th>Mail</th>
                  <th>Razon Social</th>
                  <th>CUIT</th>
                  <th>Detalles</th>
                </tr>
               </thead>
               <tbody>
                 <% @user.each do |user| %>
                   <tr>
                      <td><%= user.email %></td>
                      <td><%= user.razonSocial %></td>
                      <td><%= user.cuit %></td>
                    <td><%= link_to user_path(user) do %>
                      <i class="glyphicon glyphicon-list-alt"></i>
                    <% end %></td>
                    </tr>
                <% end %>
              </tbody>
            </table>
      </div>
    <%= will_paginate @user, renderer: BootstrapPagination::Rails %>
      <button type="button" class="btn btn-primary pull-right">
        <%= link_to 'Nuevo usuario', new_user_path %>
      </button>
    </div>
  </div>
</div>



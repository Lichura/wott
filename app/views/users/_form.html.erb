<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this usuario from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </p>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :lastname, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :lastname, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :dni, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :dni, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :birth, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_field :birth, class: "form-control" %>
    </div>
  </div>


<h3>addresses</h3>
            <%= f.fields_for :user_adresses do |address| %>
              <%= render 'user_adress_fields', f: address %>
            <% end %>
            <%= link_to_add_fields (t"add_address_to_user"), f, :user_adresses,  :class => "btn btn-success pull-right" %>



<%= f.submit 'Crear Usuario', :class => "btn btn-primary pull-right" %>

<% end %>